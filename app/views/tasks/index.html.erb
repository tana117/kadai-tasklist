<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><strong><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></strong> :made by <%= task.user.name %></li>
    <% end %>
  </ul>
  <%= link_to '新規タスク作成', new_task_path %>
<% else %>
  <h1>Welcome to Tasklist</h1>
  <ul>
    <li><%= link_to 'Signup', signup_path %></li>
    <li><%= link_to 'Login', login_path %></li>
  </ul>
<% end %>
